@model MovieVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="col-12 text-white py-2">Create Movie</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Movie.Name" class="form-control border-0 shadow" />
                    <label asp-for="Movie.Name" class="ms-2"></label>
                    <span asp-validation-for="Movie.Name" class="text-danger"></span>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Movie.NumbersInStock" class="form-control border-0 shadow" />
                        <label asp-for="Movie.NumbersInStock" class="ms-2"></label>
                        <span asp-validation-for="Movie.NumbersInStock" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Movie.DateAdded" class="form-control border-0 shadow" />
                        <label asp-for="Movie.DateAdded" class="ms-2"></label>
                        <span asp-validation-for="Movie.DateAdded" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Movie.ReleaseDate" class="form-control border-0 shadow" />
                        <label asp-for="Movie.ReleaseDate" class="ms-2"></label>
                        <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Movie.GenreId" asp-items="@Model.GenreList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Genre--</option>
                    </select>
                    <label asp-for="Movie.GenreId" class="ms-2"></label>
                    <span asp-validation-for="Movie.GenreId" class="text-danger"></span>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-primary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}