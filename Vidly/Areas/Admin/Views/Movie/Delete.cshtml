@model Movie

<div class="card shadow border-0 mt-4">
    <input asp-for="Id" hidden />
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="col-12 text-white py-2">Delete Movie</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Name" disabled class="ms-2"></label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.NumbersInStock" disabled class="form-control border-0 shadow" />
                        <label asp-for="@Model.NumbersInStock" disabled class="ms-2"></label>                        
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.DateAdded" disabled class="form-control border-0 shadow" />
                        <label asp-for="@Model.DateAdded" disabled class="ms-2"></label>                        
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.ReleaseDate" disabled class="form-control border-0 shadow" />
                        <label asp-for="@Model.ReleaseDate" disabled class="ms-2"></label>                        
                    </div>

                </div>
                @* <div class="form-floating py-2 col-12">
                <select asp-for="@Model.GenreId" asp-items="@Model.GenreList" class="form-select border-0 shadow">
                <option disabled selected>--Select Genre--</option>
                </select>
                <label asp-for="@Model.GenreId" class="ms-2"></label>
                <span asp-validation-for="@Model.GenreId" class="text-danger"></span> *@

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Movie</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}